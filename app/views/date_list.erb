<div class="row">
  <div class="span12">
    <ul class="breadcrumb">
      <li>
        <a href="<%= url_for(:index) %>">Top</a> <span class="divider">&gt;</span>
      </li>
      <% if @date %>
        <li>
          <a href="<%= url_for(:date_list) %>">Strategy Room</a> <span class="divider">&gt;</span>
        </li>
        <li class="active"><strong><%= devided_date(@date) %></strong></li>
      <% else %>
        <li class="active"><strong>Strategy Room</strong></li>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="span12">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Date</th>
          <th>Situations</th>
          <th colspan="7">Forts</th>
          <th>Guild</th>
        </tr>
      </thead>
      <tbody>
        <% @dlist.sort.reverse.each do |d| %>
          <tr>
            <td class="span2"><%= devided_date(d) %></td>
            <td class="span1"><a href="<%= url_for(:rev_list, d) %>">Time List</a></td>
            <% fort_types.each do |t| %>
              <td class="span1"><a href="<%= url_for(:fort_timeline, d, t) %>"><%= t %></a></td>
            <% end %>
            <td class="span1"><a href="<%= url_for(:fort_timeline_se, d) %>">SE</a></td>
            <td class="span2">
              <a href="<%= url_for(:union_select, d) %>">Select Guild</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% if updatable_mode? %>
  <div class="row">
    <div class="span12">
      <a href="<%= url_for(:a, :login) %>">管理ツール</a>
    </div>
  </div>
<% end %>
